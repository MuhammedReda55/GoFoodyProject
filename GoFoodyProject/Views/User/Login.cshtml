@model LoginViewModel

<link href="~/Dashpord/css/all.min.css" rel="stylesheet" />
<div class="container d-flex justify-content-center align-items-center min-vh-110" style="margin-top:40px;">
    <div class="row justify-content-center w-100">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded p-4" style="background: #fff;">
                <div class="card-body text-center">
                    <h3 class="text-uppercase fw-bold" style="color: #ff6600;">Welcome Back!</h3>
                    <p class="text-muted">Login to continue</p>

                    <!-- ✅ عرض جميع الأخطاء في الأعلى -->
                    <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                    <form method="post" asp-controller="User" asp-action="Login">
                        <input asp-for="ReturnUrl" type="hidden" />

                        <div class="mb-3 text-start">
                            <label for="email" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" id="email" placeholder="Enter your email" asp-for="Email">
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 text-start">
                            <label for="password" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="password" placeholder="Enter your password" asp-for="Password">
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <a href="#" class="text-decoration-none text-orange">Forgot Password?</a>
                        </div>

                        <button type="submit" class="btn w-100" style="background: #ff6600; color: white; font-weight: bold; border-radius: 25px; transition: 0.3s;">
                            Login
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <p class="mb-0">New here? <a asp-controller="User" asp-action="Register" class="fw-bold" style="color: #ff6600;">Create an Account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (TempData["message"] != null)
    {
        <script>
            toastr.success('@TempData["message"]');
        </script>
    }
}