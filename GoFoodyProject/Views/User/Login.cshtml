@model LoginViewModel

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>Customer's Login</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="User" asp-action="HomePage">Home</a></li>
                        <li class="breadcrumb-item active">Login</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="login-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3>Login</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Login" role="form">

                        <!-- ✅ Alert Box for validation summary -->
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>

                        <input asp-for="ReturnUrl" type="hidden" />

                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger small d-block mb-1"></span> <!-- ✅ تم نقل رسالة الخطأ فوق الحقل -->
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Email">
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="Password" class="text-danger small d-block mb-1"></span> <!-- ✅ تم نقل رسالة الخطأ فوق الحقل -->
                            <label for="review">Password</label>
                            <input type="password" class="form-control" id="review" placeholder="Enter your password" asp-for="Password">
                        </div>

                        <button type="submit" class="btn btn-solid">Login</button>

                    </form>
                </div>
            </div>

            <div class="col-lg-6 right-login">
                <h3>New Customer</h3>
                <div class="theme-card authentication-right">
                    <h6 class="title-font">Create A Account</h6>
                    <p>
                        Sign up for a free account at our store. Registration is quick and easy. It allows you to be
                        able to order from our shop. To start shopping click register.
                    </p>
                    <a asp-controller="User" asp-action="Register" class="btn btn-solid">Create an Account</a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // ✅ تحسين طريقة عرض رسائل الخطأ عند إرسال الفورم
    document.addEventListener("DOMContentLoaded", function () {
        let validationSummary = document.querySelector("[asp-validation-summary='All']");
        if (validationSummary && validationSummary.children.length > 0) {
            validationSummary.style.display = "block";
        }
    });
</script>
