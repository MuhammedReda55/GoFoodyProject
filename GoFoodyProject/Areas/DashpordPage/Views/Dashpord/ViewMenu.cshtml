@model MenuItemViewModel

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Menu List
                            <small>Restaurant Menu</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashpord" asp-action="RestaurantList" asp-route-restaurantId="@Model.SelectedRestaurantId">
                                <i class="fa fa-arrow-left"></i> Back to Restaurant
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Menu List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row products-admin ratio_asos">
            @foreach (var item in Model.Items)
            {
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body product-box">
                            <div class="img-wrapper">
                                <div class="front">
                                    <img src="~/UploadsImage/RestaurantImage/@(item.ProductImage ?? "default.jpg")"
                                         class="img-fluid blur-up lazyload bg-img" alt="@item.FoodName" />
                                    <div class="product-hover">
                                        <ul>
                                            <!-- زر التعديل -->
                                            <li>
                                                <a asp-action="EditMenuItem" asp-controller="Dashpord" asp-route-id="@item.MenuItemId" class="btn" type="button">
                                                    <i class="fa-solid fa-pencil" style="color:forestgreen"></i>
                                                </a>
                                            </li>
                                            <!-- زر الحذف -->
                                            <li>
                                                <form method="post" asp-controller="Dashpord" asp-action="DeleteMenuItem">
                                                    <input type="hidden" name="id" value="@item.MenuItemId" />
                                                    <button class="btn" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">
                                                        <i class="fa-solid fa-trash" style="color:red"></i>
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="product-detail">
                                <a href="#">
                                    <h6>@item.FoodName</h6>
                                </a>
                                <h4>$@item.Price</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        
    </div>
</div>
