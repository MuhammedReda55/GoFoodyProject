@model List<Restaurant>

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Restaurant List
                            <small>Admin Panel</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="AdminTemplate">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Restaurants</li>
                        <li class="breadcrumb-item active">Restaurant List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row products-admin ratio_asos">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body product-box">
                            <div class="img-wrapper">
                                <div class="front">
                                    <a href="#" class="bg-size">
                                        <img src="~/UploadsImage/RestaurantImage/@(item.RestaurantImage ?? "default.jpg")" class="img-fluid blur-up lazyload bg-img" alt="" style="display: none;">
                                    </a>
                                    <div class="product-hover">
                                        <ul>
                                            <li>
                                                <a asp-action="EditRestaurant" asp-controller="Dashpord" asp-route-id="@item.RestaurantId" class="btn">
                                                    <i class="fa-solid fa-pencil" style="color:forestgreen"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <form method="post" asp-controller="Dashpord" asp-action="DeleteRestaurant">
                                                    <input type="hidden" name="id" value="@item.RestaurantId" />
                                                    <button class="btn" type="submit" onclick="return confirm('Are you sure you want to delete this Resturant?');">
                                                        <i class="fa-solid fa-trash" style="color:red"></i>
                                                    </button>
                                                </form>

                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="product-detail text-center">
                                <a href="#" class="d-block">
                                    <h5 style="font-weight: 700; color: coral; margin-bottom: 5px; margin-top:10px;">@item.RestaurantName</h5>
                                </a>
                                <h6 style="color: #777; font-size: 14px;">👤 Owner: @item.OwnerName</h6>
                                <!-- الزر الجديد -->
                                <div class="mt-3">
                                    <a asp-action="ViewMenu"
                                       asp-controller="Dashpord"
                                       asp-route-restaurantId="@item.RestaurantId" class="btn btn-primary" style="background-color: coral; border-color: coral; font-weight: 600;">
                                        View Menu
                                    </a>
                                </div>
                            </div>
                            </div>
                        </div>
                       
                    
                </div>
               
            }
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
